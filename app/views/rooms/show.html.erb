<!-- Image -->
<div class="row">
  <div class="col-md-12">
    <!-- Carousel -->
    <div class="row">

      <% if @room.photos.present? %>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <% @room.photos.each do |photo| %>
              <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
            <% end %>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <% @room.photos.each do |photo| %>
              <div class="item <%= 'active' if photo.id == @room.photos.first.id %>">
                <%= image_tag photo.fitted(:big) %>
              </div>
            <% end %>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <% end %>

    </div>
  </div>
</div>
<br/>

<div class="row">

  <!-- LEFT PANEL -->
  <div class="col-md-8">

    <!-- Listing Name -->
    <div class="row">
      <div class="col-md-8">
        <h1><%= @room.name %></h1>
        <%= @room.address %>
      </div>
      <div class="col-md-4 text-center">
        <%= image_tag avatar_url(@room.user), class: "img-circle avatar-large" %><br/><br/>
        <%= @room.user.fullname %>
      </div>
    </div>
    <hr/>

    <!-- Room Info -->
    <div class="row text-babu">
      <div class="row text-center row-space-1">
        <div class="col-md-3">
          <i class="fa fa-bed fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-user-md fa-2x"></i>
        </div>
      </div>

      <div class="row text-center">
        <div class="col-md-3"><%= pluralize(@room.stations, "Station") %></div>
        <div class="col-md-3"><%= pluralize(@room.practitioners, "Practitioner") %></div>
      </div>

    </div>
    <hr/>

    <!-- About -->
    <div class="row">
      <div class="col-md-12">
        <h3>About This Clinic</h3>
        <p><%= @room.summary %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <h4>Available Procedures</h4>
        <p><%= @room.available_procedures %></p>
      </div>
      <div class="col-md-6">
        <h4>Open Hours</h4>
        <p><%= @room.open_hours %></p>
      </div>
    </div>
    <hr/>

    <!-- Amenities -->
    <div class="row">
      <div class="col-md-3">
        <h4>Amenities</h4>
      </div>

      <div class="col-md-9">
        <div class="row">
          <div class="col-md-6">
            <ul class="amenities">
              <li class="<%= 'text-line-through' unless @room.has_lobby%>">
                <%= Room.human_attribute_name(:has_lobby) %>
              </li>
              <li class="<%= 'text-line-through' unless @room.has_xrays %>">
                <%= Room.human_attribute_name(:has_xrays) %>
              </li>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class="amenities">
              <li class="<%= 'text-line-through' unless @room.has_heating %>">
                <%= Room.human_attribute_name(:has_heating) %>
              </li>
              <li class="<%= 'text-line-through' unless @room.has_internet %>">
                <%= Room.human_attribute_name(:has_internet) %>
              </li>
            </ul>
          </div>

        </div>
      </div>

    </div>
    <hr/>

    <!-- REVIEWS -->
    <div class="row">
      <div class="col-md-12">
        <h3>
          <%= pluralize(@room.guest_reviews.count, "Review") %>
          <span id="average_rating"></span>
        </h3>
        <div class="container">
          <div><%= render "reviews/guest_list", reviews: @room.guest_reviews %></div>
        </div>
      </div>
    </div>

    <br/>
    <hr/>

    <!-- GOOGLE MAP -->
    <div class="row">

      <div id="map" style="width: 100%; height: 400px"></div>

      <script>
        function initialize() {
          var location = {lat: <%= @room.latitude %>, lng: <%= @room.longitude %>};
          var map = new google.maps.Map(document.getElementById('map'), {
            center: location,
            zoom: 14
          });

          var marker = new google.maps.Marker({
            position: location,
            map: map
          });

          var infoWindow = new google.maps.InfoWindow({
            content: '<div id="content"><%= image_tag @room.cover_photo(:thumb) %></div>'
          });

          infoWindow.open(map, marker);
        }

        google.maps.event.addDomListener(window, 'load', initialize);
      </script>

    </div>
    <hr/>

    <!-- NEAR BY ROOMS -->
    <div class="row">
      <h3>Near by</h3>
      <% @room.active_nearbys(10).each do |room| %>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading preview">
              <%= image_tag room.cover_photo(:medium) %>
            </div>
            <div class="panel-body">
              <%= link_to room.name, room %><br/>
              (<%= room.distance.round(2) %> miles away)
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>


  <!-- RIGHT PANEL -->
  <div class="col-md-4">
    <!-- Reservation Form -->
    <%= render 'reservation_form' %>
  </div>
</div>

<script>
  $('#average_rating').raty({
    path: '/images',
    readOnly: true,
    score: <%= @room.average_rating %>
  });
</script>
