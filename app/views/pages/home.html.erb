<div id="search-main">
  <div class="row">
  <div class="col-md-7 banner">
    <h1><span class="text-red">StrollnSmile</span> A superb dental care travel experience</h1>
  </div>
</div>
<%= form_tag search_path, method: :get do %>
  <div class="row">
      <br />
      <br />
    <div class="col-md-8">
      <%= text_field_tag :search, params[:search], placeholder: "Where are you going?",
                         class: "form-control", "data-behavior": "geocomplete" %>
    </div>
    <div class="col-md-4">
      <%= text_field_tag :date, params[:date], placeholder: "Pick date",
                         class: "form-control", "data-behavior": "datepicker" %>
    </div>
  </div>
  <br/>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
    </div>
  </div>
<% end %>
</div>

<br/><hr/>

<div><h3>Featured Clinics</h3></div>
<br/>

<div class="row">
  <%= render "shared/rooms_list", rooms: @rooms %>
</div>

<div><h3>Cities</h3></div>
<br/>

<div class="row">
  <div class="col-md-4 col-sm-12">
    <a href="/search?utf8=%E2%9C%93&search=Quito%2C+Pichincha%2C+Ecuador">
      <div class="discovery-card" style="background-image: url(<%= image_path('QUI.jpg') %>);"></div>
    </a>
  </div>
  <div class="col-md-4 col-sm-12">
    <a href="/search?utf8=%E2%9C%93&search=Guayaquil%2C+Guayas%2C+Ecuador">
      <div class="discovery-card" style="background-image: url(<%= image_path('GUY.jpg') %>);"></div>
    </a>
  </div>
  <div class="col-md-4 col-sm-12">
    <a href="/search?utf8=%E2%9C%93&search=Cuenca%2C+Azuay%2C+Ecuador">
      <div class="discovery-card" style="background-image: url(<%= image_path('CUE.jpg') %>);"></div>
    </a>
  </div>
</div>
