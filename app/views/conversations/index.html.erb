<%= render "shared/users_navbar" %>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">My Conversations</div>
      <div class="panel-body">
        <% if @conversations.empty? %>
          <div>You have no conversations.</div>
        <% end %>

        <div class="container">
          <% @conversations.each do |conversation| %>
              <% other = current_user == conversation.sender ? conversation.recipient : conversation.sender %>
              <%= link_to conversation_messages_path(conversation) do %>
                  <div class="row conversation">
                    <% if conversation.messages.any? %>
                        <div class="col-md-2">
                          <%= image_tag avatar_url(other), class: "img-circle avatar-medium" %>
                        </div>
                        <div class="col-md-2">
                          <%= other.fullname %>
                          <%= conversation.messages.last.message_time %>
                        </div>
                        <div class="col-md-8">
                          <%= conversation.messages.last.context %>
                        </div>
                    <% end %>
                  </div>
              <% end %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
