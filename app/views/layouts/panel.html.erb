<!DOCTYPE html>
<html>
  <head>
    <title>StrollnSmile - Admin Panel</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script
      type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API_KEY_CLIENT'] %>&libraries=places">
    </script>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Varela+Round" >
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/hot-sneaks/jquery-ui.css">
  </head>

  <body>
    <!-- Error message -->
    <%= render 'shared/message' %>

    <!-- Static navbar -->
    <nav class="navbar navbar-default navbar-static-top" style ="margin-bottom: 0px">
      <div class="container">
        <div class="navbar-header">
          <%= link_to image_tag("logo2.jpg", style: "height:100%; width:auto;"),
              root_path, class: "navbar-brand", style: "padding: 4px 0px" %>
        </div>

        <% if current_admin %>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <%= current_admin.email %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Users", panel_users_path %></li>
                <li><%= link_to "Featured Clinics", panel_featured_clinics_path %></li>
                <li><%= link_to "Pricing Plans", panel_plans_path %></li>
                <li><%= link_to "Administrators", panel_admins_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Log out", panel_logout_path, method: :delete %></li>
              </ul>
            </li>
          </ul>
        <% end %>

      </div>
    </nav>

    <div class="container">
      <div class="row">
        <h3 class="admin-title"><%= yield(:title) %></h3>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
