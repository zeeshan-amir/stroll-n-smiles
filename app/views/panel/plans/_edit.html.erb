<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <h3 class="modal-title">
        Update plan
      </h3>
    </div>

    <div class="modal-body">
      <%= form_for plan, url: panel_plan_path(plan), remote: true do |f| %>
        <div class="admin-error alert-danger" style="display: none;"></div>
        <div class="form-group">
          <%= f.label :name, class: "control-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price_monthly, class: "control-label" %>
          <%= f.number_field :price_monthly, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price_semiannual, class: "control-label" %>
          <%= f.number_field :price_semiannual, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price_annual, class: "control-label" %>
          <%= f.number_field :price_annual, class: "form-control" %>
        </div>
        <div class="user-modal-footer center">
          <%= f.submit " Update ", class: "btn btn-normal user-save center" %>
        </div>
      <% end %>
    </div>

  </div>
</div>

