<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <h3 class="modal-title">
        Contact Us
      </h3>
    </div>

    <div class="modal-body">
      <p>Please submit the following form and an agent will contact you shortly.</p>
      <%= form_for subscription, url: subscriptions_path, method: "post", remote: true do |f| %>
        <div class="subscription-error alert-danger" style="display: none;"></div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">Name *</label>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">E-mail *</label>
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group select">
              <label class="control-label">Pricing plan *</label>
              <%= f.collection_select :plan, plans, :id, :name,
                { selected: selected }, { class: "form-control" } %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="control-label">Message</label>
              <%= f.text_area :message, class: "form-control", rows: "3" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12 text-center">
            <input id="subscription-submit" type="submit" class="btn btn-normal" />
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>

<script charset="utf-8">
  $(document).ready(function() {
    $('form').submit(function() {
      $('#subscription-submit').prop('disabled', true);
    });
  });
</script>
